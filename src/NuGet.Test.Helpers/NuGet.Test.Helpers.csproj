<Project Sdk="Microsoft.NET.Sdk" ToolsVersion="15.0">
  <ImportGroup>
    <Import Project="..\..\build\common.props" />
  </ImportGroup>  
  <PropertyGroup Condition=" '$(IsXPlat)' != 'true' ">
    <TargetFrameworks>netstandard1.3;net46</TargetFrameworks>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(IsXPlat)' == 'true' ">
    <TargetFrameworks>netstandard1.3</TargetFrameworks>
  </PropertyGroup>
  <PropertyGroup>
    <Version>0.1.0</Version>
    <Authors>emgarten</Authors>
    <Description>NuGet helpers for creating test nupkgs.</Description>
    <ProjectUrl>https://github.com/emgarten/nuget.test.helpers</ProjectUrl>
    <DocumentationFile>bin\$(Configuration)\$(TargetFramework)\$(AssemblyName).xml</DocumentationFile>
    <NoWarn>1591;1573</NoWarn>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="NuGet.Packaging" Version="3.5.0" />
  </ItemGroup>
</Project>